{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter",
                "ssm:GetParameters"
            ],
            "Resource": [
                "arn:aws:ssm:${AWS::Region}:${AWS::AccountId}:parameter/*/aws/access_key_id",
                "arn:aws:ssm:${AWS::Region}:${AWS::AccountId}:parameter/*/aws/secret_access_key"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:PrincipalTag/Environment": "${Environment}"
                }
            }
        },
        {
            "Effect": "Allow",
            "Action": [
                "ssm:PutParameter",
                "ssm:DeleteParameter"
            ],
            "Resource": [
                "arn:aws:ssm:${AWS::Region}:${AWS::AccountId}:parameter/*/aws/access_key_id",
                "arn:aws:ssm:${AWS::Region}:${AWS::AccountId}:parameter/*/aws/secret_access_key"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:PrincipalTag/Role": "DevOps"
                }
            }
        }
    ]
} 