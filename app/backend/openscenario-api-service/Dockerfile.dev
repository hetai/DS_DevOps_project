FROM python:3.9-slim

WORKDIR /app

# Set environment variables
ENV PYTHONDUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    python3-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies (using minimal requirements for now)
COPY requirements-minimal.txt .
RUN pip install --no-cache-dir -r requirements-minimal.txt

# Install additional validation libraries
RUN pip install --no-cache-dir xmlschema==3.0.1

# Copy the application code
COPY . .

# Set environment variables
ENV PORT=8080
ENV LOG_LEVEL=DEBUG

# Expose the port the app runs on
EXPOSE 8080

# Command to run the application with auto-reload
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080", "--reload"]
