# Terraform variables for dev environment
# Copy this file to terraform.dev.tfvars and update the values

environment = "dev"
aws_region = "us-east-1"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# Database Configuration
db_name = "openscenario_dev"
db_username = "openscenario_user"
db_password = "CHANGE_ME_dev_password_123"  # Change this to a secure password
db_instance_class = "db.t3.micro"

# Application Configuration
openai_api_key = "CHANGE_ME_YOUR_OPENAI_API_KEY"  # Get from OpenAI console
log_level = "DEBUG"

# SSL Certificate ARN (create in ACM first)
# To create: aws acm request-certificate --domain-name yourdomain.com --validation-method DNS
certificate_arn = "arn:aws:acm:us-east-1:ACCOUNT_ID:certificate/CERTIFICATE_ID"

# Default tags
default_tags = {
  Environment = "dev"
  Project     = "OpenSCENARIO"
  ManagedBy   = "Terraform"
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
}