# Terraform variables for staging environment
# Copy this file to terraform.staging.tfvars and update the values

environment = "staging"
aws_region = "us-east-1"

# VPC Configuration
vpc_cidr = "10.1.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs = ["10.1.1.0/24", "10.1.2.0/24"]
private_subnet_cidrs = ["10.1.10.0/24", "10.1.20.0/24"]

# Database Configuration
db_name = "openscenario_staging"
db_username = "openscenario_user"
db_password = "CHANGE_ME_staging_password_123"  # Change this to a secure password
db_instance_class = "db.t3.small"

# Application Configuration
openai_api_key = "CHANGE_ME_YOUR_OPENAI_API_KEY"  # Get from OpenAI console
log_level = "INFO"

# SSL Certificate ARN (create in ACM first)
# To create: aws acm request-certificate --domain-name staging.yourdomain.com --validation-method DNS
certificate_arn = "arn:aws:acm:us-east-1:ACCOUNT_ID:certificate/CERTIFICATE_ID"

# Default tags
default_tags = {
  Environment = "staging"
  Project     = "OpenSCENARIO"
  ManagedBy   = "Terraform"
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
}